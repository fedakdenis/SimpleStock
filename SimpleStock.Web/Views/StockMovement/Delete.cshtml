@model SimpleStock.Web.Models.StockMovement

@{
    ViewData["Title"] = "Delete Movement";
}

<h2>Delete Stock Movement</h2>

<div class="alert alert-warning">
    <h3>Are you sure you want to delete this movement?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Date)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>
            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Product)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Product)</dd>
            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Type)</dt>
            <dd class="col-sm-9">
                @if (Model.Type == MovementType.Income)
                {
                    <span class="badge bg-success">@Html.DisplayFor(model => model.Type)</span>
                }
                else
                {
                    <span class="badge bg-danger">@Html.DisplayFor(model => model.Type)</span>
                }
            </dd>
            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>
            
            @if (!string.IsNullOrEmpty(Model.Supplier))
            {
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Supplier)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Supplier)</dd>
            }
            
            @if (!string.IsNullOrEmpty(Model.Recipient))
            {
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Recipient)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Recipient)</dd>
            }
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form> 